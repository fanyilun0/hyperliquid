{
  "filter": {
    "top_n": 10,
    "time_window": "allTime",
    "min_pnl": 0,
    "comment": "时间窗口可选: day, week, month, allTime"
  },
  "monitor": {
    "max_addresses": 20,
    "notify_on_open": true,
    "notify_on_close": true,
    "notify_on_reverse": true,
    "notify_on_add": true,
    "notify_on_reduce": true,
    "min_position_size": 0,
    "comment": "min_position_size: 最小通知仓位大小，设置为0表示所有交易都通知（不过滤），大于0时才会过滤小于该值的交易; notify_on_add/reduce: 是否通知加仓/减仓操作"
  },
  "api": {
    "leaderboard_url": "https://stats-data.hyperliquid.xyz/Mainnet/leaderboard",
    "update_interval_hours": 1
  },
  "notification": {
    "console": true,
    "log_file": "logs/",
    "comment": "日志文件会自动保存到logs/目录，使用时间戳命名，格式: logs/YYYYMMDD_HHMMSS.log",
    "telegram": {
      "enabled": false,
      "bot_token": "",
      "chat_id": ""
    }
  },
  "debug": false
}

